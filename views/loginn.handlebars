 <div class="register-area" style="background-color: rgb(249, 249, 249);">
            <div class="container">
                <div class="col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4">
                    <div class="box-for overflow thumbnail" style = "box-shadow: 0 0 7px black; margin-top: 20px;">                         
                        <div class="col-md-12 col-xs-12 login-blocks">
						
			 {{#if hasErrors}}
			     <div class = "alert alert-danger" alert-dismissable style = "border-radius:4px;"> 
				     {{#each messages}}
					     <p><button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true"><i class = "lnr lnr-cross-circle"></i></button>
				         <i class= "lnr lnr-warning"></i> {{this}}</p>
					 {{/each}}
				 </div> 
			 {{/if}}
			 
			  {{#if timing}}
			     <div class = "alert alert-danger" alert-dismissable style = "border-radius:4px;"> 
				    
					     <p><button type = "button" class = "close" data-dismiss = "alert" aria-hidden = "true"><i class = "lnr lnr-cross-circle"></i></button>
				         <i class= "lnr lnr-warning"></i> Last Attempt. If you fail, Try again after <strong>2</strong> Minutes. <strong>TIME:</strong> <span id="output"></p>
					
				 </div>
			 {{/if}}
                            <form action="/signin" method="post" style = "margin-top: 10px;">
							
                                <div class="form-group">
								     <label for="property-images">Email</label>
                                     <input type="email" class="form-control" id="email" name = "username" placeholder = "Enter email">
                                </div>
                                <div class="form-group">
								     <label for="property-images">Password</label>
                                     <input type="password" class="form-control" id="password" name = "password" placeholder = "Enter passoword">
                                </div>
								<input type = "hidden" name = "_csrf" value = "{{csrfToken}}">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-default"> Log in</button>
                                </div>
                            </form>
							 <br>
                            <p><a href = "signup">Don't have an account?</a><p> 
							<hr>
                            
                             
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>